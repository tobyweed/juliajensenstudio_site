<% include ../partials/header %>
<div class="container">
    <div class="row">

        <h1>Choose New Description and Image</h1>
        <div>
            <form action="/paintings/<%=painting.parent%>/<%=paintings.indexOf(painting)%>?_method=PUT" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=painting.description%>" name="painting[description]"></input>
                </div>
                <div class="form-group">
                    <input type="file" value="<%=painting.img%>" name="image" />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit painting</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>